{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "jsx": "react-jsx",
    
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,

    "esModuleInterop": true,
    "verbatimModuleSyntax": false, // ‚Üê Add this
    "preserveValueImports": false
  },
  "include": ["src","env.ts"]
}
